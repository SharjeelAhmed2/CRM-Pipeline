{
    "manifest_version": 3,
    "name": "Gmail CRM Pipeline",
    "version": "1.0.0",
    "description": "CRM Pipeline integration for Gmail",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://mail.google.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }],
    "background": {
      "service_worker": "background.js"
    }
  }